<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.HBox?>
<BorderPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox fx:id="developersVBox" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" spacing="10" style="-fx-padding: 15;">
            <Label text="%label.moreInfo.title" style="-fx-font-size: 20; -fx-font-weight: bold;" />

            <!-- HBox per Version -->
            <HBox spacing="5">
                <Label text="%label.moreInfo.text" style="-fx-font-size: 16; -fx-font-weight: bold;" />
            </HBox>

            <Label text="%label.moreInfo.tableTitle" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-padding: 10 0 0 0;" />
            <TableView fx:id="shortcutListTable" prefHeight="200.0" prefWidth="400.0" >
                <columns>
                    <TableColumn fx:id="shortcutName" text="%label.moreInfo.table.shortcutName" prefWidth="100.0" />
                    <TableColumn fx:id="shortcutCommand" text="%label.moreInfo.table.shortcutCommand" prefWidth="100.0" />
                    <TableColumn fx:id="shortcutDescription" text="%label.moreInfo.table.shortcutDescription" prefWidth="200.0" />
                </columns>
            </TableView>

        </VBox>
    </center>
</BorderPane>


